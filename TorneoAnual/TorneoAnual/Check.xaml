<Window x:Class="TorneoAnual.Check"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         
  
        xmlns:local="clr-namespace:TorneoAnual"
        mc:Ignorable="d"
        Title="Check-In" Height="757" Width="834">
    <Grid Margin="0,0,2,-31">
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnInaguracion" 
            ToolTip="Editar foto"
            Margin="50,45,685,0"
            VerticalAlignment="Top" 
            Click="btnInaguracion_Click" 
            Height="80">
            Inaguracion
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnAlimentos" 
            ToolTip="Editar foto" 
            Margin="144,45,591,0" 
            VerticalAlignment="Top" 
            Click="btnAlimentos_Click" 
            Height="80">
            Alimentos
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnCerveza" 
            ToolTip="Editar foto" 
            Margin="238,45,504,0" 
            VerticalAlignment="Top" 
            Click="btnCerveza_Click" 
            Height="80">
            Cerveza
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnTennis" 
            ToolTip="Editar foto" 
            Margin="442,45,302,0" 
            VerticalAlignment="Top" 
            Click="btnTennis_Click" 
            Height="80">
            Tennis
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnGolf" 
            ToolTip="Editar foto" 
            Margin="325,45,419,0" 
            VerticalAlignment="Top" 
            Click="btnGolf_Click" 
            Height="80">
            Golf
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnConcierto" 
            ToolTip="Editar foto" 
            Margin="527,45,202,0" 
            VerticalAlignment="Top" 
            Click="btnConcierto_Click" 
            Height="80">
            Concierto
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnClausura" 
            ToolTip="Editar foto" 
            Margin="627,45,107,0" 
            VerticalAlignment="Top" 
            Click="btnClausura_Click" 
            Height="80">
            Clausura
        </Button>


        <Label 
            Content="Buscar por Nombre:" 
            x:Name="lblNombre" 
            Height="30" 
            Margin="55,0,542,503" 
            VerticalAlignment="Bottom" 
            FontWeight="Bold" 
            FontSize="16"/>

        <Label Content="Inaguracion" x:Name="lblTitulo" Height="30" Margin="115,0,522,563" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="16"/>

        <Label Content="kkjkkkkkk" x:Name="lblReporte" Height="30" Margin="115,0,482,342" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="16"/>

        <Label Content="jkkk" x:Name="lblNom" Height="30" Margin="95,0,562,287" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="10" />

        <Label Content="jjj" x:Name="lblApellidos" Height="30" Margin="95,0,562,237" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="10" />

        <Label Content="jkj" x:Name="lblNumero" Height="30" Margin="95,0,562,202" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="10" />



        <Label 
            Content="Verificar Entrega" 
            x:Name="lblEntregado" 
            Height="49" 
            Margin="540,0,59,555" 
            VerticalAlignment="Bottom" 
            FontWeight="Bold" 
            FontSize="26"/>

        <ComboBox
            materialDesign:HintAssist.Hint="Ingresa el nombre del usuario"
            x:Name="cbBoxNombre" 
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
            VerticalAlignment="Top"
            Margin="50,250,387,0" 
            FontSize="15" 
            Height="50" 
            SelectionChanged="CbBoxNombre_SelectedValueChanged" />
       
        <Button 
            x:Name="btnFalse" 
            Grid.Row="0"
            Style="{StaticResource MaterialDesignRaisedButton}" 
            IsEnabled="False"
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" 
            Margin="0,0,44,437" 
            Height="110" 
            Width="125" 
            Background="Black">
            <Image
                Source="Resources/false.png">
            </Image>
        </Button>
        
        <Button
            x:Name="btnTrue" 
            Grid.Row="0" 
            Style="{StaticResource MaterialDesignRaisedButton}" 
            IsEnabled="False"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" 
            Margin="0,0,174,437" 
            Height="110" 
            Width="125"
            Background="Black">
            <Image 
                Source="Resources/True.png">
            </Image>
        </Button>
        
        <Button
            Style="{StaticResource MaterialDesignRaisedButton}" 
            x:Name="btnEntregado"
            ToolTip="Editar foto" 
            Visibility="Hidden" 
            Margin="563,340,79,0" 
            VerticalAlignment="Top" 
            Click="btnEntregado_Click" 
            Height="30" Content=""/>




    </Grid>
</Window>
